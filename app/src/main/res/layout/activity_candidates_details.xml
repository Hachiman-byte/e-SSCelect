<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".candidates_details"
    android:background="@color/gray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/backbtn"
                    android:layout_width="45dp"
                    android:layout_height="50dp"
                    android:src="@drawable/baseline_keyboard_backspace_24"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"></ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Candidate Details"
                    android:fontFamily="@font/bungee"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:textSize="20sp"></TextView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/position"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TITLE/POSITION"
            android:fontFamily="@font/bungee"
            android:textSize="17sp"
            android:layout_marginVertical="10dp"
            android:textColor="@color/primary_color"
            android:layout_marginHorizontal="15dp">
        </TextView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            app:cardCornerRadius="15dp"
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="15dp">

            <ImageView
                android:id="@+id/candidate_photo"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@drawable/image"
                android:layout_marginBottom="20dp"></ImageView>

        </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="2dp"
                android:backgroundTint="@color/primary_color">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    app:cardCornerRadius="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingHorizontal="25dp"
                        android:paddingVertical="15dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="First Name"
                            android:fontFamily="@font/oswald_medium"
                            android:textStyle="bold"
                            android:layout_marginBottom="6dp"></TextView>
                        <TextView
                            android:id="@+id/firstname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Firstname"
                            android:textSize="18sp"
                            android:alpha="0.7"></TextView>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/profile_gray"
                            android:layout_marginVertical="10dp"></View>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Last Name"
                            android:fontFamily="@font/oswald_medium"
                            android:textStyle="bold"
                            android:layout_marginBottom="6dp"></TextView>
                        <TextView
                            android:id="@+id/lastname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Lastname"
                            android:textSize="18sp"
                            android:alpha="0.7"></TextView>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/profile_gray"
                            android:layout_marginVertical="10dp"></View>


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Gender"
                            android:fontFamily="@font/oswald_medium"
                            android:textStyle="bold"
                            android:layout_marginBottom="6dp"></TextView>
                        <TextView
                            android:id="@+id/gender"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Male"
                            android:textSize="18sp"
                            android:alpha="0.7"></TextView>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/profile_gray"
                            android:layout_marginVertical="10dp"></View>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Course"
                            android:fontFamily="@font/oswald_medium"
                            android:textStyle="bold"
                            android:layout_marginBottom="6dp"></TextView>
                        <TextView
                            android:id="@+id/course_section"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="BS"
                            android:textSize="18sp"
                            android:alpha="0.7"></TextView>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/profile_gray"
                            android:layout_marginVertical="10dp"></View>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>
    </LinearLayout>
</RelativeLayout>